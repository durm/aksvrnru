#-*- coding: utf-8 -*-

from django.contrib import admin
from products.models import Product

class ProductAdmin(admin.ModelAdmin):
    list_display = (
        'name',
        'vendor__name',
        'short_desc',
        'available_for_trade',
        'trade_price',
        'available_for_retail',
        'retail_price'
    )

    list_filter = (
        'is_published', 
        'is_valid', 
        'is_special_price', 
        'is_new', 
        'trade_by_order',
        'is_recommend_price', 
        'available_for_retail',
        'available_for_trade',
    )

admin.site.register(Product, ProductAdmin)
